                    <div class="form-group">
                        <label for="iEmail">Email</label>
                        <input name="iEmail" class="form-control" id="iEmail" type="email" value="" data-val-required="The Email field is required." data-val-email="The Email field is not a valid e-mail address." data-val="true">
                        <span class="text-danger field-validation-valid" data-valmsg-replace="true" data-valmsg-for="iEmail"></span>
                    </div>

                    <div class="form-group">
                        <label for="iPassword">Password</label>
                        <input name="iPassword" class="form-control" id="iPassword" type="password" data-val-required="The Password field is required." data-val="true">
                        <span class="text-danger field-validation-valid" data-valmsg-replace="true" data-valmsg-for="iPassword"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" id="login-submit" type="submit">Log in</button>
                    </div>

